# Sentiment Snapshot Service - Environment Configuration
# Copy to .env.local and fill in actual values

# Twitter/X API Configuration (FR-017)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API Configuration (FR-018)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=zorg-sentiment/1.0

# Mastodon API Configuration (FR-019)
MASTODON_INSTANCE_URL=https://mastodon.nl
MASTODON_ACCESS_TOKEN=your_mastodon_access_token_here

# RSS Feed Configuration (FR-020) - Nu.nl
RSS_NUML_URL=https://www.nu.nl/rss/Algemeen

# Tweakers Forum Configuration (FR-020)
TWEAKERS_FORUM_URL=https://tweakers.net/feeds/mixed.xml

# Sentiment Service Configuration
SENTIMENT_CACHE_TTL_MINUTES=15
SENTIMENT_RETENTION_HOURS=24
SENTIMENT_MIN_SAMPLE_SIZE=50

# Rate Limiting (requests per hour)
RATE_LIMIT_TWITTER=100
RATE_LIMIT_REDDIT=60
RATE_LIMIT_MASTODON=300
RATE_LIMIT_RSS=60
RATE_LIMIT_TWEAKERS=60

# Spike Detection Configuration
SPIKE_LOOKBACK_HOURS=24
SPIKE_STD_DEV_THRESHOLD=2.0

# Language Detection
LANGUAGE_DETECTION_THRESHOLD=0.7
MIN_DUTCH_CONFIDENCE=0.6
